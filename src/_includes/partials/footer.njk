<style>.three-columns{display:grid;grid-template-columns:1fr;}@media screen and (min-width: 750px){.three-columns{grid-template-columns:1fr 1fr 1fr;}.three-columns > div:nth-child(3){order:2;}.three-columns > div:nth-child(2){order:3;} }</style>

<footer class="bg-alt font-size--1" style="margin-top:auto;--section-padding:2em">
  <hr>
  <section class="wrapper page-wrapper">
    <div class="horizontal center middle" style="width:48px;margin:0 auto">
      <button title="Scroll to Top" aria-label="Scroll to Top" class="color-primary req-js" style="cursor:pointer;width:24px" onclick="(function(){document.querySelector('#top').scrollIntoView({behavior:'smooth'});})();return false;" >{{ '/src/svg/chevron-up.svg' | svgContents | safe }}</button>
      <noscript><a href="#top" class="nofocus" role="button" tabindex="0" title="Scroll to Top" aria-label="Scroll to Top" style="width:24px"><img src="/icons/chevron-up.png" alt=""></a></noscript>
    </div>
    <div class="three-columns">
      <div class="vertical center flow">
        <h4 class="text-lowercase">Location</h4>
        <a href="{{ site.google_maps }}" title="Open in Google Maps" aria-label="Open in Google Maps" target="_blank" rel="noopener">
          <p>{{ site.address }}<br>{{ site.address_locality }}, {{ site.address_region }}, {{ site.address_postcode }}<br>New Zealand</p>
        </a>
        <br><br>
      </div>
      <div class="vertical center flow">
        <h4 class="text-lowercase">Contact us</h4>
        <p><a href="{{ site.mailto_obf | safe }}?subject=Flowers Enquiry" title="Send us a message" aria-label="Send us a message">{{ site.email_obf | safe }}</a></p>
        <p><a href="tel:{{ site.phone_intl }}" title="Call now" aria-label="Call now">{{ site.phone }}</a></p>
        <br>
        <h4 class="text-lowercase">Follow us</h4>
        <div class="horizontal space-between color-dark" style="width:150px;margin-top:1.5em;height:2rem">
          <a href="{{ site.facebook }}" target="_blank" rel="noopener" style="width:16px" title="Follow us on Facebook" aria-label="Follow us on Facebook">{{ '/src/svg/facebook-f.svg' | svgContents | safe }}</a>
          <a href="{{ site.instagram }}" target="_blank" rel="noopener" style="width:24px" title="Follow us on Instagram" aria-label="Follow us on Instagram">{{ '/src/svg/instagram.svg' | svgContents | safe }}</a>
          <a href="{{ site.pinterest }}" target="_blank" rel="noopener" style="width:24px" title="Pin us on Pinterest" aria-label="Pin us on Pinterest">{{ '/src/svg/pinterest.svg' | svgContents | safe }}</a>
          <a href="{{ site.google_page }}" target="_blank" rel="noopener" style="width:24px" title="Find us on Google" aria-label="Find us on Google">{{ '/src/svg/google.svg' | svgContents | safe }}</a>
        </div>
        <br><br>
      </div>
      <div class="vertical center flow">
        <h4 class="text-lowercase">Hours</h4>
        {% include "partials/shop-hours.njk" %}
        <br>
        <h4 class="text-lowercase">Subscribe to our Mailing List</h4>
        <div id="mc_embed_signup" class="width100">
          <form action="https://floriade.us16.list-manage.com/subscribe/post?u=86cd330db9cb5b7a033dae205&amp;id=d73ce91674" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
            <div id="mc_embed_signup_scroll" class="vertical center flow">
              <input type="email" autocomplete="email" inputmode="email" value="" name="EMAIL" class="input email" id="mce-EMAIL" placeholder="Your Email address" style="max-width:250px" required>
              <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
              <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_86cd330db9cb5b7a033dae205_d73ce91674" tabindex="-1" value=""></div>
              <div class="clear"><button type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">Subscribe</button></div>
            </div>
          </form>
        </div>
        <br><br>
      </div>
    </div>
    <div class="text-center">
      <p style="white-space:nowrap">Â© Floriade Ltd {{ year }}. All rights reserved</p>
      <p><a href="/terms-and-conditions/">Terms and Conditions</a></p>
      <p><a href="/privacy/">Privacy Policy</a></p>
      <p><a href="/cookie-policy/">Cookie Policy</a></p>
    </div>
  </section>
</footer>
