<div id="menu">
  <input class="toggle" type="checkbox" onclick="modal()">
  <nav class="burger">
    <span role="button" style="width:var(--step-1)" title="Menu" aria-label="Menu">{{ '/src/svg/bars.svg' | svgContents | safe }}</span>
  </nav>
  <nav class="close">
    <span role="button" style="width:var(--step-1)" title="Close" aria-label="Close">{{ '/src/svg/close.svg' | svgContents | safe }}</span>
  </nav>
  <div class="content vertical center">
    <div class="bg-alt vertical center width100" style="padding:1.5em">
      <figure class="logo">
        <img src="{{ '/icons/floriade-logo-dark.png' | url }}" width="320" height="269" alt="Floriade logo" style="opacity:0.66;margin:auto" loading="eager" decoding="async" />
      </figure>
      <div>
      {{ collections.all | eleventyNavigation | removeEmpty | eleventyNavigationToHtml | safe }}
      {# collections.all | eleventyNavigation("Flowers") | removeEmpty | eleventyNavigationToHtml | safe #}
      </div>
    </div>
  </div>
  <div class="backdrop"></div>
</div>
<script>function modal(){document.documentElement.setAttribute('data-modal-active',document.querySelector(".toggle").checked);}</script>
