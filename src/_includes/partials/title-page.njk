<style>#bg-video{object-fit:cover;object-position:center center;width:100vw;height:100vh;z-index:-1;filter:brightness(60%);}#title-page{position:absolute;top:0;left:0;width:100%;height:100vh;}#title-logo{width:66vmin;max-width:500px;}@supports(background:-webkit-named-image(i)){ #bg-video,#title-page{height:-webkit-fill-available;} }.noviz{clip:rect(0 0 0 0);clip-path:inset(50%);height:1px;overflow:hidden;position:absolute;white-space:nowrap;width:1px;} #more{width:48px;margin:0 auto 1em auto;place-self:end}@media screen and (orientation:landscape) and (max-width:950px){ #more{margin-bottom:0.5em} }.banner-message{position:absolute;top:0;left:0;right:0;z-index:2;}</style>
{% if banner_message.message %}
  {% set message = banner_message.message | addNbsp %}
  <aside class="banner-message">
    {% markdown message %}
  </aside>
{% endif %}
