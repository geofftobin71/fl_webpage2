<figure class="height100vh" style="filter:brightness(60%)">
  {% set image_path = header_image or site.header_image %}
  <img class="bg cover" srcset="{% twic path=image_path, sizes=image_sizes %}" width="1024" height="1024" sizes="100vmax" src="{% twic path=image_path %}" style="background-image:url({% lqip path=image_path %})" alt="" />
</figure>

<div id="title-page" class="canvas center text-center">
  <div class="vertical center">
    <figure id="title-logo">
      <img src="{{ '/icons/floriade-logo-white.svg' | url }}" alt="Floriade logo" width="1206" height="1016" loading="eager" decoding="async" />
    </figure>
    <h1 class="noviz">{{ site.name | safe }}</h1>
    <p class="color-light font-secondary font-size-1" style="margin-top:1em">{{ site.tagline_html | safe }}</p>
  </div>
  <div id="more" class="horizontal center middle color-light">
    <span title="Scroll to Content" aria-label="Scroll to Content" class="req-js" style="cursor:pointer;width:24px" onclick="(function(){document.querySelector('#main').scrollIntoView({behavior:'smooth'});})();return false;" >{{ '/src/svg/chevron-down.svg' | svgContents | safe }}</span>
    <noscript><a href="#main" class="nofocus" title="Scroll to Content" aria-label="Scroll to Content" style="color:white;display:block;width:24px">{{ '/src/svg/chevron-down.svg' | svgContents | safe }}</a></noscript>
  </div>
</div>
<div id="main"></div>
<div class="site-menu">
  <nav class="wrapper page-wrapper">
    {{ collections.all | eleventyNavigation | removeEmpty | eleventyNavigationToHtml | safe }}
  </nav>
</div>
