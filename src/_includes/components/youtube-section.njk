{% set heading = section.heading %}
{% set videoId = section.videoId %}
{% set videoTitle = section.videoTitle %}
{% set params = section.params %}
{% set alternate_background_color = section.alternate_background_color %}
<section class="youtube-section{{ ' bg-alt' if (alternate_background_color) }}">
  {% ifAsync heading %}<h2 class="heading">{{ heading }}</h2>{% endif %}
  <div class="wrapper text-wrapper">
    <noscript><a href="https://youtube.com/watch?v={{ videoId }}" target="_blank" rel="noopener"></noscript>
    <lite-youtube videoid="{{ videoId }}" style="background-image: url('https://i.ytimg.com/vi/{{ videoId }}/hqdefault.jpg');" {% if params %} params="{{ params }}"{% endif %}>
      <button type="button" class="lty-playbtn">
        <span class="lyt-visually-hidden">Play Video: {{ videoTitle }}</span>
      </button>
    </lite-youtube>
    <noscript></a></noscript>
  </div>
</section>
